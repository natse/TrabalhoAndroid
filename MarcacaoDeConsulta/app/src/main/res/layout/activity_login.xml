<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/telainicial">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="79mm"
        android:id="@+id/ImgTelaIncial"
        android:background="@drawable/telainicial">

    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TxtLogin"
        android:textColor="@color/preto"
        android:text="Login:"
        android:layout_centerInParent="true"
        android:layout_marginLeft="1mm"
        android:textSize="4mm"
        android:layout_marginTop="20dp">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditLogin"
        android:textSize="3.5mm"
        android:background="@drawable/texbotton"
        android:textColor="@color/preto"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TxtLogin"
        android:hint="Diginte cÃ³digo ou CPF"
        android:textAlignment="center">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSenha"
        android:layout_marginLeft="1mm"
        android:text="Senha:"
        android:textSize="4mm"
        android:textColor="@color/preto"
        android:layout_below="@id/EditLogin">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditSenha"
        android:textSize="3.5mm"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:background="@drawable/texbotton"
        android:layout_below="@id/txtSenha">
    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnLogin"
        android:textColor="@color/preto"
        android:text="Login"
        android:textSize="3.5mm"
        android:background="@drawable/primeirobottan"
        android:layout_below="@id/EditSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnCadastrar"
        android:text="Cadastrar"
        android:textColor="@color/preto"
        android:textSize="3.4mm"
        android:layout_below="@id/BtnLogin"
        android:layout_marginLeft="8mm"
        android:layout_marginTop="10dp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnEsqueciSenha"
        android:text="Esquiceu Senha?"
        android:textColor="@color/preto"
        android:textSize="3.3mm"
        android:layout_below="@id/BtnLogin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="36mm">
    </TextView>
</RelativeLayout>